{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "apps.main:app",
                "--reload"
            ],
            "jinja": true
        },
        {
            "name": "Django Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                // "0.0.0.0:8000",
                "--nothreading",
                // "--noreload"
            ],
            "django": true,
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env",
            "stopOnEntry": false
        },
        {
            "name": "shell_plus_django_debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/apps/manage.py",
            "args": [
                "shell_plus",
                "--print-sql",
                "--verbosity=3"
            ],
            "django": true,
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env",
        },
        {
            "name": "Test Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": ["debug-test"],
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env"
        },
        {
        "name": "Docker Debug",
        "type": "docker",
        "request": "launch",
        "preLaunchTask": "docker-run: debug",
        "python": {
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/server",
                    "remoteRoot": "/app"
                }
            ],
            "projectType": "django",
            "django": true,
            "justMyCode": false,
            "args":
                [
                    "runserver",
                    "0.0.0.0:10006"
                ]
            }
        },
        {
            "name": "Attach to Debugpy in Tmux",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "justMyCode": false,
            "envFile": "${workspaceFolder}/startex/.env",
        }
    ]
}
